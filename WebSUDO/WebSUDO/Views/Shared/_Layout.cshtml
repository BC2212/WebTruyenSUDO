<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebTruyenSudo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">SUDO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="http://localhost:49599/">Trang Chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Theo Dõi</a>
                        </li>
                        <div class="collapse navbar-collapse js-navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="dropdown dropdown-large">
                                    <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                                        Thể Loại
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-large row">
                                        <li class="col-sm-3">
                                            <ul>
                                                <li><a href="#">Action</a></li>
                                                <li><a href="#">Adventure</a></li>
                                                <li><a href="#">Isekai</a></li>
                                                <li><a href="#">Drama</a></li>
                                                <li><a href="#">Comic</a></li>
                                            </ul>
                                        </li>
                                        <li class="col-sm-3">
                                            <ul>
                                                <li><a href="#">Manga</a></li>
                                                <li><a href="#">Manhwa</a></li>
                                                <li><a href="#">Manhua</a></li>
                                                <li><a href="#">Mystery</a></li>
                                            </ul>
                                        </li>
                                        <li class="col-sm-3">
                                            <ul>
                                                <li><a href="#">Doujinshi</a></li>
                                                <li><a href="#">School Life</a></li>
                                                <li><a href="#">Fantasy</a></li>
                                                <li><a href="#">Psychological</a></li>
                                            </ul>
                                        </li>
                                        <li class="col-sm-3">
                                            <ul>
                                                <li><a href="#">Romance</a></li>
                                                <li><a href="#">Shounen</a></li>
                                                <li><a href="#">Sports</a></li>
                                            </ul>
                                        </li>
                                    </ul>

                                </li>
                            </ul>
                        </div>
                        
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Tìm kiếm" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">TimKiếm</button>
                    </form>
                </div>
                <button type="button" class="btn btn-default navbar-btn">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DangNhap">Đăng Nhập</a>
                </button>
                <button type="button" class="btn btn-default navbar-btn">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DangKi">Đăng Ký</a>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WebTruyenSudo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
